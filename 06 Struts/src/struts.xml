<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="Messages" />

	<package name="actions" extends="struts-default" namespace="/cd">
		<action name="list" method="retrieve" class="br.unirio.webdisco.action.CompactDiscService">
			<result>/listdisc.jsp</result>
		</action>

		<action name="create" method="create" class="br.unirio.webdisco.action.CompactDiscService">
			<result name="input">/formdisc.jsp</result>
		</action>

		<action name="edit" method="edit" class="br.unirio.webdisco.action.CompactDiscService">
			<result name="input">/formdisc.jsp</result>
		</action>

		<action name="save" method="save" class="br.unirio.webdisco.action.CompactDiscService">
			<result name="success" type="redirect">/cd/list</result>
			<result name="input">/formdisc.jsp</result>
		</action>

		<action name="delete" method="delete" class="br.unirio.webdisco.action.CompactDiscService">
			<result name="success" type="redirect">/cd/list</result>
		</action>
	</package>
</struts>